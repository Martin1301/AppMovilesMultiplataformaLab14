<?xml version="1.0" encoding="utf-8" ?>
<resources>

<style name="MainTheme" parent="MainTheme.Base">
  <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
 </style>
    
 <style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
  <!--header background-->
  <item name="colorAccent">#5CAB54</item>
  <!--header textcolor-->
  <item name="android:textColorPrimaryInverse">#FFFFFF</item>
  <!--body background-->
  <item name="android:windowBackground">#C3F0BE</item>
  <!--selected day-->
  <item name="android:colorControlActivated">#ff8000</item>
  <!--days of the month-->
  <item name="android:textColorPrimary">#000000</item>
  <!--days of the week-->
  <item name="android:textColorSecondary">#000000</item>
  <!--cancel&ok-->
  <item name="android:textColor">#000000</item>
 </style>


</resources>